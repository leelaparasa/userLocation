

<div >
    <h1>Hi Im Here in {{#if location}}<button onclick="getLocation('{{location}}')" >X</button>{{/if}}</h1>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&callback=init()"></script>
</div>

<script>
    var latlng;
    function getLocation(address) {
        console.log("Im in",address);
        var geocoder = new google.maps.Geocoder();

        geocoder.geocode( { 'address': address}, function(results, status) {


            if (status == google.maps.GeocoderStatus.OK) {

                var latitude = results[0].geometry.location.lat();

                var longitude = results[0].geometry.location.lng();
                latlng = new google.maps.LatLng(latitude, longitude);

                var map = new google.maps.Map(document.getElementById('map'), {
                    center: latlng,
                    zoom: 13
                    //console.log(latitude, longitude);

                });

            }
        });}
    function  init(){
        var map = new google.maps.Map(document.getElementById('map'), {
            center: latlng,
            zoom: 13
        });
    }

</script>
